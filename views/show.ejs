			<p  id="content" class="lead">Languages:<%= lawyer.languages %></p>
			<p  id="content" class="lead"><i class="fa fa-map-marker fa-x" aria-hidden="true"></i>Location: <%= lawyer.location %></p>     
			<p  id="content" class="lead">Charge: Rs. <%= lawyer.charge %></p>
			<!-- <p id="content" class="lead">Charge:$ </p> -->
			<!-- <a class="btn btn-primary btn-lg" href="/connect/%=lawyer._id%>" role="button">Connect !</a> -->
			
			<% if(user==0){ %>
			<form  action="/connect/<%=lawyer._id%>" method="POST">
				<% if(status=="connected"){ %>
		<button class="btn btn-primary btn-lg">Connect !</button>
			</form>
				<% } else if(status=="requested"){ %>
				<button class="btn btn-default btn-lg">Already Requested !</button>
			
				<% } else{ %>
				<button class="btn btn-success btn-lg">Already Connected!</button>
				<% } %>
			
			<% } %>
			
