        <div class="col-10 col-lg-8 blurb mb-5 mb-md-0">
    <h2><%= lawyer.firstname + " " + lawyer.lastname%></h2>
			<i class="fa fa-graduation-cap fa-2x d-none d-lg-inline" aria-hidden="true"></i>
    <!-- <img class="d-none d-lg-inline" src="lolli_icon.png"> -->
    <p  id="content" class="lead"><%=lawyer.about%> </p>
